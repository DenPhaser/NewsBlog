@using Microsoft.AspNetCore.Identity
@using NewsBlog.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="navbar-custom-menu">
    <ul class="nav navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                    <span class="hidden-xs">@UserManager.GetUserName(User)</span>
                </a>
            </li>
            <li>
                <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
                    <button type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fa  fa-sign-out"></i> Log off</button>
                </form>
            </li>
        }
        else
        {
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
        }
    </ul>
</div>