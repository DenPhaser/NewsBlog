@model PostViewModel

@using NewsBlog.Models.NewsViewModels

@{
    ViewData["Title"] = Model.Title;
}

@section Breadcrumb
{
    @Html.Partial("_Breadcrumb", Model.Title)
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">@Model.Title</h3>
    </div>

    <div class="box-body no-padding">
        <img src="@Model.ImagePath" alt="" class="img-responsive">
    </div>
    <div class="box-body">
        <p>@Html.Raw(Model.Content)</p>
    </div></div>